<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_margin="16px"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"  >

    <ImageView
        android:id="@+id/fb_logo"
        android:layout_margin="20px"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_facebook"/>

    <Button
        android:id="@+id/fb_share_button"
        android:text="Facebook"
        android:layout_alignBottom="@id/fb_logo"
        android:layout_toRightOf="@id/fb_logo"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/twt_logo"
        android:layout_margin="20px"
        android:layout_below="@id/fb_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_twitter"/>

    <Button
        android:id="@+id/twt_share_button"
        android:text="Twitter"
        android:layout_alignBottom="@id/twt_logo"
        android:layout_toRightOf="@id/twt_logo"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/cancel_share_button"
        android:text="NOT NOW"
        android:layout_below="@id/twt_logo"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:background="#1f77b4"/>
</RelativeLayout>